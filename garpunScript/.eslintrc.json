{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": 
    [
      "airbnb-base",
      "eslint:recommended",
      "prettier"
    ],
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ]
    },
    "ignorePatterns": ["**/_test_/**", "**/vendor/*.js"]
}
