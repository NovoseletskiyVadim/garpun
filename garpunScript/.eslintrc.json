{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": 
    [
      "airbnb-base",
      "eslint:recommended",
      "prettier"
    ],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {

        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}
